<%= form_for(@product_category) do |f| %>
  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_category.errors.count, "error") %> prohibited this product_category from being saved:</h2>

      <ul>
      <% @product_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <div class="form-group col-sm-12">
      <div class="col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <div class="col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="image-fields nested_body">
      <%= f.fields_for :images do |i| %>
        <%= render :partial => "image_fields", :locals => { :f => i } %>
      <% end %>
      <div class="links">
        <%= link_to_add_association "Upload New Image", f, :images, class: "btn btn-primary add-images" %>
      </div><br>
    </div>
    <div class="form-group col-sm-12">
      <div class="">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>